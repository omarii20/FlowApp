{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ES2015"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,                    // ✅ מאפשר לקומפיילר לקרוא קבצי .js
    "checkJs": false,                   // ⛔ לא בודק שגיאות טיפוסים בקבצי .js
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true                      // ✅ לא ליצור קבצים פלט בזמן הריצה (רק בדיקות טיפוסים)
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",                          // ✅ תוסיף את זה כדי שיכיר גם בקבצי JS
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "context/AuthContext.js"
  ]
}
